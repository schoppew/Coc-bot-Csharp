                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" SourceName="Grid" Value="True" />
                                <Condition Property="IsSelected" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Opacity" Value="0.3" TargetName="SelectedRect"/>
